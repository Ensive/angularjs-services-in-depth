@import mixins

body
  margin 0

a
  text-decoration none

.container
  width 1170px
  margin-right auto
  margin-left auto
  padding-left 15px
  padding-right 15px

.navbar
  position relative
  min-height 50px
  margin-bottom 20px
  background-color #222


  > a
    float left
    color lightgrey
    padding 15px 15px
    font-size 18px
    line-height 20px

  ul
    float left
    padding 0
    margin 0
    &.date
      float right

    li
      float left
      position relative
      display block

      a
        color white
        position relative
        display block
        padding 15px
        line-height 20px


      &.active a
        background-color black

hr
  clear both

// animations
@-moz-keyframes spin
  from
    -moz-transform rotate(0deg)
  to
    -moz-transform rotate(360deg)

@-webkit-keyframes spin
  from
    -webkit-transform: rotate(0deg)
  to
    -webkit-transform: rotate(360deg)

@keyframes spin
  from
    transform:rotate(0deg)
  to
    transform:rotate(360deg)

